@model Project_MVC.Models.CompanyInsert
@{
    ViewBag.Title = "CompanyInsert_Pageload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Insert Company Details</h1>
<div>
    @using (Html.BeginForm("CompanyInsert_click", "CompanyReg", FormMethod.Post))
    {
        <div>
            <label>Name:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.name)
            @Html.ValidationMessageFor(m => m.name)
        </div>


        <div>
            <label>Address:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.address)
            @Html.ValidationMessageFor(m => m.address)
        </div>


        <div>
            <label>Phone:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.phone)
            @Html.ValidationMessageFor(m => m.phone)
        </div>

        <div>
            <label>Email:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.email)

        </div>


        <div>
            <label>Username:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.username)

        </div>


        <div>
            <label>Password:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.pass)

        </div>


        <div>
            <label>Confirm Password:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.cpassword)
            @Html.ValidationMessageFor(m => m.cpassword)
        </div>


        <div>
            <label>Job Status:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.status)
            
        </div>

        <div>
            <input type="submit" value="Insert" />
            @Html.DisplayFor(m=> m.msg)
        </div>
    }
</div>

