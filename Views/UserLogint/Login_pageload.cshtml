@model Project_MVC.Models.Logincls
@{
    ViewBag.Title = "Login_pageload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1> User Login</h1>
<div>
    @using (Html.BeginForm("Login_Click", "UserLogint", FormMethod.Get))
    {
        <div>
            <label> Username:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.uname)
            @Html.ValidationMessageFor(m => m.uname)
        </div>

        <div>
            <label> Password:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.password)
            @Html.ValidationMessageFor(m => m.password)
        </div>

        <div>
            <input type="submit" value="Login" />
            @Html.DisplayFor(m=> m.msg)
        </div>
    }
</div>