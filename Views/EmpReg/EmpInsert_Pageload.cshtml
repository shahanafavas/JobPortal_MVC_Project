@model Project_MVC.Models.EmployeeInsert
@{
    ViewBag.Title = "EmpInsert_Pageload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Insert Employee Details </h2>
<div>
    @using (Html.BeginForm("EmpInsert_click", "EmpReg", FormMethod.Post))
    {
        <div>
            <label>Name:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.name)
            @Html.ValidationMessageFor(m => m.name)
        </div>
        <div>
            <label> Age:</label>
        </div>
        @Html.TextBoxFor(m => m.age)
        @Html.ValidationMessageFor(m => m.age)
        <div>
            <label>Address:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.address)

        </div>


        <div>
            <label>Phone:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.phone)
            @Html.ValidationMessageFor(m => m.phone)
        </div>

        <div>
            <label>Email:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.email)
            @Html.ValidationMessageFor(m => m.email)

        </div>
        <div>
            <label>Qualification:</label>
        </div>
        <div>
            @foreach (var item in Model.myqual)
            {
                <label>
                    <input type="checkbox" value="@item.value" checked="@item.ischecked" name="selectedqual" id="@item.value" /> @Html.Raw(@item.text)
                </label>
            }
            @*@Html.TextBoxFor(m => m.qualification)*@
        </div>

        <div>
            <label>Skills:</label>
        </div>

        <div>
            @Html.TextAreaFor(m => m.skills)
        </div>

        <div>
            <label>Experience:</label>
        </div>

        <div>
            @Html.TextBoxFor(m => m.experience)
        </div>

        <div>
            <label>Username:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.username)

        </div>


        <div>
            <label>Password:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.password)

        </div>




        <div>
            <label> Status:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.status)

        </div>

        <div>
            <input type="submit" value="Insert" />
            @Html.DisplayFor(m => m.msg)
        </div>
    }
</div>